<div id="bug-wrapper">

<h1 id="bug-title">Feedback Reports</h1>

<div class= "container" id="bug-report-container">
  <% @bug_reports.each do |bug_report| %>
    <% unless bug_report.closed %>
      <div class="bug-report-description">
        <p class="bug-report-desc-text"> <strong>Name:</strong> <%= bug_report.name %> </p>
        <p class="bug-report-desc-text"> <strong>Email:</strong> <%= bug_report.email %> </p>
        <p class="bug-report-desc-text"> <strong>Description:</strong> <%= bug_report.desc %> </p>
        <p class="bug-report-desc-text"> <strong>Closed:</strong> <%= bug_report.closed %> </p>
        <%= link_to("View", "/bug_reports/" + bug_report.id.to_s + ".html", class: "bug-btn") %>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'New Feedback', new_bug_report_path, id: "new-bug" %>
</div>


</div>